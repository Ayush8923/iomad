{{!
    @template core/full_header

    This template renders the header.

    Example context (json):
    {
        "contextheader": "context_header_html",
        "hasnavbar": false,
        "navbar": "navbar_if_available",
        "courseheader": "course_header_html",
        "welcomemessage": "welcomemessage"
    }
}}
<header id="page-header" class="row" style="background-image: url('path/to/your/background.jpg'); background-size: cover; color: #fff;">
    <div class="col-12 pt-5 pb-5">
        <div class="card {{^contextheader}}border-0 bg-transparent{{/contextheader}}" >
            <div class="card-body {{^contextheader}}p-4{{/contextheader}}">
                <div class="d-flex align-items-center">
                    <div class="mr-auto">
                        <h1 class="display-4">{{{contextheader}}}</h1>
                    </div>
                    <div class="header-actions-container flex-shrink-0" data-region="header-actions-container">
                        {{#headeractions}}
                            <div class="header-action ml-2">{{{.}}}</div>
                        {{/headeractions}}
                    </div>
                </div>
                <div class="d-flex flex-wrap mt-3">
                    {{#hasnavbar}}
                    <div id="page-navbar" class="navbar navbar-expand-lg navbar-dark">
                        {{{navbar}}}
                    </div>
                    {{/hasnavbar}}
                    <div class="ml-auto d-flex">
                        {{{pageheadingbutton}}}
                    </div>
                    <div id="course-header" class="mt-3">
                        {{{courseheader}}}
                    </div>
                </div>
            </div>
        </div>
        {{> core/welcome }}
    </div>
</header>
